block variables
  - var altLangs = altLangs
  - var lang = lang
  - var parent_en = parent_en
  - var parent_nl = parent_nl
  - var parent_pt = parent_pt

.navigation
  a.navigation__logo.is-open(href=`/${lang}/`) m<span class="navigation__logo__span">edia </span>c<span class="navigation__logo__span">reators</span>
  h1=connection
    
  .langs
    ul.langs__list
      li.langs__list__item
        a.langs__list__link(href="#" id=`${ lang === 'en' ? 'en' : lang === 'nl' ? 'nl' : lang === 'pt' ? 'pt' : 'en'}` data-animation="link")
          span=lang

      each altLang in altLangs
        if ( altLang.lang === 'en-gb' )
          li.langs__list__item
            if (typeof(parent_en) == 'undefined')
              a.langs__list__link#en(href=`/en/${altLang.uid === 'home' ?  '' : altLang.uid + '/'}` data-animation="link") 
                span en
            else if (typeof(parent_en[0]) !== 'undefined')
              a.langs__list__link#en(href=`/en/${parent_en[0].uid}/${altLang.uid === 'home' ?  '' : altLang.uid}/` data-animation="link")
                span en

        if ( altLang.lang === 'nl-be' )
          li.langs__list__item
            if (typeof(parent_nl) == 'undefined')
              a.langs__list__link#nl(href=`/nl/${altLang.uid === 'home' ?  '' : altLang.uid + '/'}` data-animation="link")
                span nl
            else if (typeof(parent_nl[0]) !== 'undefined')
              a.langs__list__link#nl(href=`/nl/${parent_nl[0].uid}/${altLang.uid === 'home' ?  '' : altLang.uid}/` data-animation="link")
                span nl

        if ( altLang.lang === 'pt-pt' )
          li.langs__list__item
            if (typeof(parent_pt) == 'undefined')
              a.langs__list__link#pt(href=`/pt/${altLang.uid === 'home' ?  '' : altLang.uid + '/'}` data-animation="link")
                span pt
            else if (typeof(parent_pt[0]) !== 'undefined')
              a.langs__list__link#pt(href=`/Â´pt/${parent_pt[0].uid}/${altLang.uid === 'home' ?  '' : altLang.uid}/` data-animation="link")
                span pt

