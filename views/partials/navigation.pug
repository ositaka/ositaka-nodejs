  .langs
    ul.langs__list
      li.langs__list__item
        a.langs__list__link(href="#" id=`${ lang === 'en' ? 'en' : 'pt'}` data-animation="link")
          span=lang

      each altLang in altLangs
        if ( altLang.lang === 'en-gb' )
          li.langs__list__item
            if (typeof(parent_en) == 'undefined')
              a.langs__list__link#en(href=`/en/${altLang.uid === 'home' ?  '' : altLang.uid + '/'}` data-animation="link") 
                span en
            else if (typeof(parent_en[0]) !== 'undefined')
              a.langs__list__link#en(href=`/en/${parent_en[0].uid}/${altLang.uid === 'home' ?  '' : altLang.uid}/` data-animation="link")
                span en

        if ( altLang.lang === 'pt-pt' )
          li.langs__list__item
            if (typeof(parent_pt) == 'undefined')
              a.langs__list__link#pt(href=`/pt/${altLang.uid === 'home' ?  '' : altLang.uid + '/'}` data-animation="link")
                span pt
